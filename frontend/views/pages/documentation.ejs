<% 
  layout = 'layout';
  pageTitle = 'Documentation';
  extraScripts = ['shared.js'];
%>

<!-- Welcome -->
<div class="card mb-4">
  <div class="card-header">
    <span class="font-medium">Welcome to Brutally Honest AI</span>
  </div>
  <p class="text-sm text-secondary">
    Real-time voice validation platform that transcribes audio and fact-checks claims against your knowledge base.
  </p>
</div>

<!-- Quick Start -->
<div class="card mb-4">
  <div class="card-header">
    <span class="font-medium">Quick Start</span>
  </div>
  <div class="flex flex-col gap-4">
    <div class="flex gap-3 items-start">
      <div class="badge" style="min-width: 24px; justify-content: center;">1</div>
      <div>
        <div class="font-medium text-sm">Upload Documents</div>
        <div class="text-xs text-muted">Go to <a href="/documents" style="color: var(--text-primary); text-decoration: underline;">Documents</a> and upload your knowledge base files.</div>
      </div>
    </div>
    <div class="flex gap-3 items-start">
      <div class="badge" style="min-width: 24px; justify-content: center;">2</div>
      <div>
        <div class="font-medium text-sm">Connect Device or Upload Audio</div>
        <div class="text-xs text-muted">On <a href="/" style="color: var(--text-primary); text-decoration: underline;">Home</a>, connect an ESP32S3 or upload audio files directly.</div>
      </div>
    </div>
    <div class="flex gap-3 items-start">
      <div class="badge" style="min-width: 24px; justify-content: center;">3</div>
      <div>
        <div class="font-medium text-sm">Transcribe & Validate</div>
        <div class="text-xs text-muted">Select recordings, enable validation, and the AI will fact-check claims.</div>
      </div>
    </div>
  </div>
</div>

<!-- Features Grid -->
<div class="card mb-4">
  <div class="card-header">
    <span class="font-medium">Features</span>
  </div>
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: var(--space-4);">
    <div class="border rounded p-4">
      <div class="font-medium text-sm mb-2">Audio Transcription</div>
      <div class="text-xs text-muted">Whisper AI with Dutch/English detection</div>
    </div>
    <div class="border rounded p-4">
      <div class="font-medium text-sm mb-2">Fact Checking</div>
      <div class="text-xs text-muted">Validate claims against your documents</div>
    </div>
    <div class="border rounded p-4">
      <div class="font-medium text-sm mb-2">ESP32 Integration</div>
      <div class="text-xs text-muted">Connect BLE devices for live recording</div>
    </div>
    <div class="border rounded p-4">
      <div class="font-medium text-sm mb-2">Profile Management</div>
      <div class="text-xs text-muted">Manage clients, brands, and persons</div>
    </div>
  </div>
</div>

<!-- API Reference -->
<div class="card">
  <div class="card-header">
    <span class="font-medium">API Endpoints</span>
  </div>
  <div class="flex flex-col gap-3">
    <div class="border rounded p-4">
      <div class="flex items-center gap-2 mb-2">
        <span class="badge badge-success">POST</span>
        <code class="text-sm">/api/ai/transcribe-file</code>
      </div>
      <div class="text-xs text-muted">Upload and transcribe an audio file</div>
    </div>
    <div class="border rounded p-4">
      <div class="flex items-center gap-2 mb-2">
        <span class="badge badge-success">POST</span>
        <code class="text-sm">/api/ai/transcribe-file-async</code>
      </div>
      <div class="text-xs text-muted">Async transcription for long files</div>
    </div>
    <div class="border rounded p-4">
      <div class="flex items-center gap-2 mb-2">
        <span class="badge">GET</span>
        <code class="text-sm">/api/transcription-history</code>
      </div>
      <div class="text-xs text-muted">Get transcription history</div>
    </div>
    <div class="border rounded p-4">
      <div class="flex items-center gap-2 mb-2">
        <span class="badge badge-success">POST</span>
        <code class="text-sm">/validation/validate</code>
      </div>
      <div class="text-xs text-muted">Validate text against knowledge base</div>
    </div>
  </div>
</div>
