<% 
  layout = 'layout';
  pageTitle = 'Profiles';
  extraScripts = ['profiles.js', 'shared.js'];
%>

<!-- TABS -->
<div class="tabs">
  <button id="tab-clients" class="tab active" onclick="switchProfileType('clients')">Clients</button>
  <button id="tab-brands" class="tab" onclick="switchProfileType('brands')">Brands</button>
  <button id="tab-persons" class="tab" onclick="switchProfileType('persons')">Persons</button>
</div>

<!-- Create Profile Form -->
<div class="card mb-4">
  <div class="card-header">
    <span id="create-profile-title" class="font-medium">Create Client Profile</span>
  </div>
  <form id="create-profile-form" onsubmit="createProfile(event)" class="profile-form">
    <div class="form-group">
      <label class="form-label">Name *</label>
      <input type="text" id="profile-name" class="input" required placeholder="Enter name">
    </div>
    
    <div id="person-fields" class="form-group" style="display: none;">
      <label class="form-label">Role</label>
      <input type="text" id="profile-role" class="input" placeholder="e.g., CEO, Marketing Manager">
    </div>
    
    <div id="person-company-field" class="form-group" style="display: none;">
      <label class="form-label">Company</label>
      <input type="text" id="profile-company" class="input" placeholder="Company name">
    </div>
    
    <div class="form-group">
      <label class="form-label">Description *</label>
      <textarea id="profile-description" class="input" rows="3" required placeholder="Brief description"></textarea>
    </div>
    
    <div id="brand-values-field" class="form-group" style="display: none;">
      <label class="form-label">Values (comma-separated)</label>
      <input type="text" id="profile-values" class="input" placeholder="e.g., quality, innovation, sustainability">
    </div>
    
    <div class="form-group">
      <label class="form-label">Tags (comma-separated)</label>
      <input type="text" id="profile-tags" class="input" placeholder="e.g., retail, DIY, europe">
    </div>
    
    <button type="submit" class="btn btn-primary w-full">Create Profile</button>
  </form>
</div>

<!-- Profiles List -->
<div class="card">
  <div class="card-header">
    <span id="profiles-list-title" class="font-medium">Client Profiles</span>
    <button onclick="loadProfiles()" class="btn btn-tertiary btn-sm">Refresh</button>
  </div>
  <div id="profiles-list" class="profiles-list">
    <div class="text-center text-muted p-4">Loading profiles...</div>
  </div>
</div>

<style>
.profile-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
  padding: 16px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.form-label {
  font-size: 13px;
  font-weight: 500;
  color: var(--text);
}

.profiles-list {
  padding: 0;
}

.profile-card {
  padding: 16px;
  border-bottom: 1px solid var(--border);
}

.profile-card:last-child {
  border-bottom: none;
}

.profile-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8px;
}

.profile-info {
  display: flex;
  align-items: center;
  gap: 8px;
  flex-wrap: wrap;
}

.profile-name {
  font-weight: 600;
  font-size: 15px;
}

.profile-badge {
  background: var(--surface-2);
  color: var(--text-muted);
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 500;
}

.profile-description {
  color: var(--text-muted);
  font-size: 13px;
  margin: 8px 0;
  line-height: 1.5;
}

.profile-tags {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
  margin: 8px 0;
}

.profile-tag {
  background: var(--primary);
  color: white;
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 11px;
}

.profile-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 12px;
  border-top: 1px solid var(--border);
  margin-top: 12px;
}

.profile-facts {
  font-size: 12px;
  color: var(--text-muted);
}
</style>
