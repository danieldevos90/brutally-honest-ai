<% 
  layout = 'layout';
  pageTitle = 'Home';
  extraScripts = ['home.js', 'multi_file_functions.js', 'file_upload_transcription_v2.js', 'devices_manager.js', 'shared.js'];
%>

<!-- Notifications handled by notifications.js -->

<!-- TABS - Record First -->
<div class="tabs">
  <button id="tab-record" class="tab active" data-tab="record" onclick="switchTab('record')">
    Record
  </button>
  <button id="tab-upload" class="tab" data-tab="upload" onclick="switchTab('upload')">
    Upload
  </button>
  <button id="tab-history" class="tab" data-tab="history" onclick="switchTab('history')">
    History
  </button>
  <button id="tab-device" class="tab" data-tab="device" onclick="switchTab('device')">
    ESP32
  </button>
</div>

<!-- TAB: RECORD (Primary) -->
<div id="tab-content-record" class="tab-content active" style="display: flex; flex-direction: column; align-items: center; justify-content: center; text-align: center; padding: 60px 20px;">
  <div class="record-hero" style="display: flex; flex-direction: column; align-items: center; text-align: center; max-width: 400px;">
    <!-- Recording Status Indicator -->
    <div id="recording-indicator" class="recording-indicator" style="display: none;">
      <span class="pulse-dot"></span>
      <span class="recording-label-text">Recording...</span>
      <span id="record-timer" class="record-timer">00:00</span>
    </div>
    
    <!-- Record Button - uses design system btn-primary -->
    <button id="record-btn" class="btn btn-primary btn-lg" style="border-radius: 99px; padding: 16px 32px; margin-bottom: 32px;" onclick="toggleRecording()">
      <i data-lucide="mic" class="record-icon"></i>
      <i data-lucide="square" class="stop-icon" style="display: none;"></i>
      <span id="record-text">Tap to Record</span>
    </button>
    
    <!-- Recording Instructions -->
    <p class="record-hint" id="record-hint" style="color: var(--text-muted); font-size: 14px; max-width: 320px; margin: 0;">
      Press the button to start recording. Your recording will be automatically saved.
    </p>
    
    <!-- Quick Tips - inside centered container -->
    <div class="tips-section" style="margin-top: 24px;">
      <div class="tip-card" style="display: inline-flex; align-items: center; gap: 12px; padding: 14px 18px; background: var(--bg-secondary); border-radius: 10px; border: 1px solid var(--border-primary);">
        <svg class="tip-icon-svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="flex-shrink: 0; stroke: var(--text-muted);">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="16" x2="12" y2="12"/>
          <line x1="12" y1="8" x2="12.01" y2="8"/>
        </svg>
        <span class="tip-text" style="color: var(--text-muted); font-size: 13px;">Speak clearly for better transcription accuracy</span>
      </div>
    </div>
  </div>
  
  <!-- Recent Recording (shows after recording) -->
  <div id="recent-recording" class="card mt-4" style="display: none;">
    <div class="card-header">
      <span class="font-medium">Last Recording</span>
      <span id="recent-recording-status" class="status-badge saved">Saved</span>
    </div>
    <div class="recording-preview">
      <audio id="recording-playback" controls class="w-full"></audio>
      <div class="recording-actions mt-3">
        <button class="btn btn-primary btn-sm" onclick="transcribeLastRecording()">
          Transcribe
        </button>
        <button class="btn btn-secondary btn-sm" onclick="discardLastRecording()">
          Discard
        </button>
      </div>
    </div>
  </div>
  
  </div>

<!-- TAB: UPLOAD -->
<div id="tab-content-upload" class="tab-content" style="display: none;">
  <div class="card">
    <form id="upload-form" enctype="multipart/form-data">
      <div class="file-upload" id="file-upload-area">
        <svg class="file-upload-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
        </svg>
        <div class="file-upload-text">
          <strong>Click to upload</strong> or drag and drop<br>
          <span class="text-xs text-muted">Audio/video: WAV, MP3, M4A, WebM, MP4</span>
        </div>
        <input type="file" id="audio-file" name="file" accept="audio/*,video/*" multiple />
      </div>
    </form>
  </div>
  
  <!-- Selected Files Display -->
  <div id="uploaded-files-display" class="card mt-4" style="display: none;">
    <div class="card-header">
      <span class="font-medium">Selected Files</span>
      <button class="btn btn-tertiary btn-sm" onclick="clearUploadedFiles()">Clear All</button>
    </div>
    <div id="uploaded-files-list" class="files-list"></div>
    <div id="uploaded-files-summary" class="files-summary"></div>
    <div class="upload-options mt-3">
      <label class="checkbox-label">
        <input type="checkbox" id="upload-enable-document-validation">
        <span>Enable document validation</span>
      </label>
    </div>
    <button id="upload-transcribe-btn" class="btn btn-primary mt-3 w-full" onclick="transcribeUploadedFiles()" disabled>
      Transcribe Files
    </button>
  </div>
  
  <!-- Transcription Progress -->
  <div id="transcription-loading" class="card mt-4" style="display: none;">
    <div class="progress-container">
      <div class="progress-spinner"></div>
      <div id="progress-text" class="progress-text">Processing...</div>
      <div id="progress-bar-container" class="progress-bar-container">
        <div id="progress-bar" class="progress-bar" style="width: 0%"></div>
      </div>
    </div>
    <div id="process-logs" class="process-logs mt-3" style="display: none;"></div>
  </div>
  
  <!-- Results -->
  <div id="transcription-results" class="card mt-4" style="display: none;"></div>
</div>

<!-- TAB: HISTORY -->
<div id="tab-content-history" class="tab-content" style="display: none;">
  <!-- Search & Filter Bar - 5 Column Grid -->
  <div class="history-toolbar" style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr auto; gap: 10px; align-items: center; margin-bottom: 16px;">
    <div style="position: relative;">
      <i data-lucide="search" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); width: 14px; height: 14px; color: var(--text-muted); pointer-events: none;"></i>
      <input type="text" id="history-search" placeholder="Search..." oninput="filterHistory()" style="width: 100%; padding: 8px 10px 8px 32px; border: 1px solid var(--border-primary); border-radius: 6px; font-size: 13px; background: var(--bg-primary); color: var(--text-primary);">
    </div>
    <select id="history-status-filter" onchange="filterHistory()" style="width: 100%; padding: 8px 24px 8px 10px; border: 1px solid var(--border-primary); border-radius: 6px; font-size: 13px; background: var(--bg-primary) url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%2710%27 height=%2710%27 viewBox=%270 0 12 12%27%3E%3Cpath fill=%27%23666%27 d=%27M6 8L1 3h10z%27/%3E%3C/svg%3E') no-repeat right 6px center; color: var(--text-secondary); cursor: pointer; appearance: none;">
      <option value="">Status</option>
      <option value="completed">Completed</option>
      <option value="pending">Pending</option>
      <option value="failed">Failed</option>
    </select>
    <select id="history-sentiment-filter" onchange="filterHistory()" style="width: 100%; padding: 8px 24px 8px 10px; border: 1px solid var(--border-primary); border-radius: 6px; font-size: 13px; background: var(--bg-primary) url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%2710%27 height=%2710%27 viewBox=%270 0 12 12%27%3E%3Cpath fill=%27%23666%27 d=%27M6 8L1 3h10z%27/%3E%3C/svg%3E') no-repeat right 6px center; color: var(--text-secondary); cursor: pointer; appearance: none;">
      <option value="">Sentiment</option>
      <option value="positive">Positive</option>
      <option value="neutral">Neutral</option>
      <option value="negative">Negative</option>
    </select>
    <select id="history-sort" onchange="filterHistory()" style="width: 100%; padding: 8px 24px 8px 10px; border: 1px solid var(--border-primary); border-radius: 6px; font-size: 13px; background: var(--bg-primary) url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%2710%27 height=%2710%27 viewBox=%270 0 12 12%27%3E%3Cpath fill=%27%23666%27 d=%27M6 8L1 3h10z%27/%3E%3C/svg%3E') no-repeat right 6px center; color: var(--text-secondary); cursor: pointer; appearance: none;">
      <option value="newest">Newest</option>
      <option value="oldest">Oldest</option>
    </select>
    <button class="btn btn-tertiary btn-sm" onclick="loadTranscriptionHistory()" style="padding: 8px 12px; font-size: 13px;">
      <i data-lucide="refresh-cw" style="width: 14px; height: 14px;"></i>
    </button>
  </div>
  
  <!-- Results Count -->
  <div id="history-results-info" class="history-results-info">
    <span id="history-count">0 recordings</span>
  </div>
  
  <!-- Grid Layout with gaps -->
  <div id="history-list" class="history-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(min(400px, 100%), 1fr)); gap: 20px;">
    <div class="text-center text-muted py-4">Loading history...</div>
  </div>
</div>

<!-- TAB: ESP32 DEVICE -->
<div id="tab-content-device" class="tab-content" style="display: none;">
  <div class="card">
    <div class="card-header">
      <span class="font-medium">ESP32S3 Device</span>
    </div>
    <select id="device-select" class="input" onchange="selectDevice(this.value)">
      <option value="">-- Select Device --</option>
    </select>
  </div>
  
  <div class="card mt-4">
    <div class="card-header">
      <span class="font-medium">Device Recordings</span>
      <button id="refresh-recordings-btn" class="btn btn-tertiary btn-sm" onclick="refreshDeviceRecordings()">Refresh</button>
    </div>
    <div id="device-recordings-list" class="flex flex-col gap-2">
      <p class="text-muted text-sm">Select a device to see recordings</p>
    </div>
  </div>
</div>

<style>
/* Notifications use design-system.css toast classes */

