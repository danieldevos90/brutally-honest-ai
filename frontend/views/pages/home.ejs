  font-size: 18px;
  font-weight: 600;
  color: #ef4444;
}

/* Record Button - full round pill style */
#tab-content-record #record-btn,
#record-btn.btn.btn-primary.btn-lg {
  border-radius: 99px !important;
  padding: 16px 32px !important;
  font-size: 16px !important;
  margin-bottom: 32px !important;
}

#record-btn.recording {
  background: var(--color-danger, #dc2626) !important;
}

#record-btn.recording:hover {
  background: var(--color-danger-hover, #b91c1c) !important;
}

#record-btn .record-icon,
