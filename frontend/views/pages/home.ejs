<!-- AI Transcription Section -->
<div class="section">
    <h2>AI Transcription</h2>
    <div class="transcription-section">
        
        <!-- Transcription Source Tabs -->
        <div style="display: flex; justify-content: center; margin-bottom: 20px; border-bottom: 2px solid #e5e5e5;">
            <button id="tab-device" class="transcription-tab active" onclick="switchTranscriptionTab('device')">
                <i data-lucide="hard-drive" style="width: 16px; height: 16px;"></i>
                Device Recordings
            </button>
            <button id="tab-upload" class="transcription-tab" onclick="switchTranscriptionTab('upload')">
                <i data-lucide="upload" style="width: 16px; height: 16px;"></i>
                Upload File
            </button>
        </div>
        
        <!-- Tab Content: Device Recordings -->
        <div id="tab-content-device">
            <p style="text-align: center; margin-bottom: 15px; color: #666;">
                Select one or more recordings from below and transcribe them with Whisper AI (Dutch/English auto-detection)
            </p>
        
            <!-- Selected Files Display (Device mode) -->
            <div id="selected-files-display" style="display: none; background: #f5f5f5; padding: 15px; border-radius: 10px; margin-bottom: 15px;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                    <div style="font-weight: 500;">Selected Recordings:</div>
                    <button onclick="clearSelectedFiles()" style="background: none; border: none; cursor: pointer; color: #ef4444; padding: 4px;" title="Clear all selections">
                        <i data-lucide="x" style="width: 16px; height: 16px;"></i>
                    </button>
                </div>
                <div id="selected-files-list" style="max-height: 120px; overflow-y: auto;"></div>
                <div id="selected-files-summary" style="font-size: 0.9rem; color: #666; margin-top: 8px; text-align: center;"></div>
            </div>
            
            <!-- Document Validation Toggle -->
            <div style="text-align: center; margin-bottom: 15px;">
                <label style="display: inline-flex; align-items: center; gap: 8px; font-size: 14px; color: #666; cursor: pointer;">
                    <input type="checkbox" id="enable-document-validation" style="margin: 0;">
                    <i data-lucide="file-check" style="width: 16px; height: 16px;"></i>
                    Validate transcription against uploaded documents
                </label>
                <div style="font-size: 12px; color: #999; margin-top: 4px;">
                    Uses your document knowledge base to fact-check transcribed content
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div style="text-align: center; margin-bottom: 20px; display: flex; gap: 10px; justify-content: center; flex-wrap: wrap;">
                <button id="transcribe-btn" class="btn btn-primary" onclick="transcribeSelectedFiles()" disabled>
                    Select recordings to transcribe
                </button>
                <button id="clear-results-btn" class="btn btn-secondary" onclick="clearTranscriptionResults()" style="display: none;">
                    <i data-lucide="trash-2" style="width: 16px; height: 16px; margin-right: 6px;"></i>
                    Clear Results
                </button>
            </div>
        </div>
        
        <!-- Tab Content: File Upload -->
        <div id="tab-content-upload" style="display: none;">
            <p style="text-align: center; margin-bottom: 15px; color: #666;">
                Upload audio files directly from your computer for transcription - no device required
            </p>
            
            <!-- File Upload Area -->
            <div id="file-upload-area" class="file-upload-dropzone" ondrop="handleFileDrop(event)" ondragover="handleDragOver(event)" ondragleave="handleDragLeave(event)" onclick="document.getElementById('file-upload-input').click()">
                <input type="file" id="file-upload-input" accept="audio/*,.wav,.mp3,.m4a,.ogg,.flac,.webm" multiple style="display: none;" onchange="handleFileSelect(event)" onclick="event.stopPropagation()">
                <div class="upload-content">
                    <i data-lucide="upload-cloud" style="width: 48px; height: 48px; color: #999; margin-bottom: 12px;"></i>
                    <p style="font-weight: 500; margin-bottom: 4px;">Drag & drop audio files here</p>
                    <p style="color: #999; font-size: 13px; margin-bottom: 12px;">or click anywhere to browse</p>
                    <button class="btn btn-secondary" onclick="event.stopPropagation(); document.getElementById('file-upload-input').click()" style="font-size: 13px;">
                        <i data-lucide="folder-open" style="width: 14px; height: 14px; margin-right: 4px;"></i>
                        Browse Files
                    </button>
                    <p style="color: #bbb; font-size: 11px; margin-top: 12px;">Supports WAV, MP3, M4A, OGG, FLAC (max 100MB)</p>
                </div>
            </div>
            
            <!-- Uploaded Files List -->
            <div id="uploaded-files-display" style="display: none; background: #f5f5f5; padding: 15px; border-radius: 10px; margin-top: 15px; margin-bottom: 15px;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
                    <div style="font-weight: 500;">Files to Transcribe:</div>
                    <button onclick="clearUploadedFiles()" style="background: none; border: none; cursor: pointer; color: #ef4444; padding: 4px;" title="Clear all files">
                        <i data-lucide="x" style="width: 16px; height: 16px;"></i>
                    </button>
                </div>
                <div id="uploaded-files-list" style="max-height: 150px; overflow-y: auto;"></div>
                <div id="uploaded-files-summary" style="font-size: 0.9rem; color: #666; margin-top: 8px; text-align: center;"></div>
            </div>
            
            <!-- Document Validation Toggle for Upload -->
            <div style="text-align: center; margin-bottom: 15px;">
                <label style="display: inline-flex; align-items: center; gap: 8px; font-size: 14px; color: #666; cursor: pointer;">
                    <input type="checkbox" id="upload-enable-document-validation" style="margin: 0;">
                    <i data-lucide="file-check" style="width: 16px; height: 16px;"></i>
                    Validate against uploaded documents
                </label>
            </div>
            
            <!-- Transcribe Button for Upload -->
            <div style="text-align: center; margin-bottom: 20px;">
                <button id="upload-transcribe-btn" class="btn btn-primary" onclick="transcribeUploadedFiles()" disabled>
                    <i data-lucide="wand-2" style="width: 16px; height: 16px; margin-right: 6px;"></i>
                    Select files to transcribe
                </button>
            </div>
        </div>
        
        <!-- Transcription Results (shared between tabs) -->
        <div id="transcription-results" style="display: none;">
            <div style="display: flex; align-items: center; margin-bottom: 15px;">
                <h3 style="margin: 0; color: #333;">Transcription Results</h3>
                <button onclick="toggleProcessLogs()" style="background: none; border: none; cursor: pointer; color: #666; margin-left: 8px; padding: 0;" title="Show processing logs">
                    <i data-lucide="info" style="width: 16px; height: 16px;"></i>
                </button>
            </div>
            
            <!-- Condensed Results -->
            <div style="background: #f8f9fa; padding: 12px; border-radius: 6px; margin-bottom: 15px; font-size: 14px;">
                <div style="margin-bottom: 8px;">
                    <strong style="color: #333;">Transcript:</strong>
                    <div id="transcript-text" style="color: #333; margin-top: 4px;"></div>
                </div>
                
                <div style="margin-bottom: 8px;">
                    <strong style="color: #333;">Sentiment:</strong>
                    <span id="transcript-sentiment" style="color: #555; margin-left: 8px;"></span>
                </div>
                
                <div>
                    <strong style="color: #333;">Brutal Honest Reply:</strong>
                    <div id="transcript-brutal-honesty" style="color: #555; margin-top: 4px; line-height: 1.4;"></div>
                </div>
                
                <!-- Document Validation Results -->
                <div id="document-validation-section" style="display: none; border-top: 1px solid #e0e0e0; padding-top: 12px; margin-top: 12px;">
                    <strong style="color: #333;">ðŸ“š Document Validation:</strong>
                    <div id="document-validation-summary" style="color: #555; margin-top: 4px; line-height: 1.4;"></div>
                    
                    <div id="validation-score-section" style="margin-top: 8px; display: none;">
                        <div style="font-size: 12px; color: #666; margin-bottom: 4px;">Validation Score:</div>
                        <div style="background: #e0e0e0; height: 4px; border-radius: 2px; overflow: hidden;">
                            <div id="validation-score-bar" style="background: #10b981; height: 100%; width: 0%; transition: width 0.3s ease;"></div>
                        </div>
                        <div id="validation-score-text" style="font-size: 12px; color: #666; margin-top: 2px;">0%</div>
                    </div>
                </div>
            </div>
            
            <!-- Expandable Logs Section for Results -->
            <div id="results-process-logs" style="display: none; margin-bottom: 15px; text-align: left; background: #f8f9fa; padding: 15px; border-radius: 8px; max-height: 200px; overflow-y: auto; font-family: monospace; font-size: 14px; border: 1px solid #ddd;">
                <div style="text-align: center; margin-bottom: 10px; font-weight: bold; color: #333;">Processing Logs</div>
                <div id="results-log-content" style="color: #555; line-height: 1.4;"></div>
            </div>
        </div>
        
        <!-- Processing Indicator -->
        <div id="transcription-loading" style="display: none; text-align: center; padding: 20px;">
            <div style="margin-bottom: 10px;">
                <div style="display: inline-block; width: 20px; height: 20px; border: 2px solid #f3f3f3; border-top: 2px solid #333; border-radius: 50%; animation: spin 1s linear infinite;"></div>
            </div>
            <div style="display: flex; align-items: center; justify-content: center; margin-top: 10px;">
                <span style="color: #666; margin-right: 8px;">Untangling the spaghetti of words you just threw at me...</span>
                <button onclick="toggleProcessLogs()" style="background: none; border: none; cursor: pointer; color: #666; padding: 0;" title="Show processing logs">
                    <i data-lucide="info" style="width: 16px; height: 16px;"></i>
                </button>
            </div>
            
            <div id="process-logs" style="display: none; margin-top: 15px; text-align: left; background: #f8f9fa; padding: 15px; border-radius: 8px; max-height: 200px; overflow-y: auto; font-family: monospace; font-size: 14px; border: 1px solid #ddd;">
                <div style="text-align: center; margin-bottom: 10px; font-weight: bold; color: #333;">Processing Logs</div>
                <div id="log-content" style="color: #555; line-height: 1.4;"></div>
            </div>
        </div>
    </div>
</div>

<!-- Device Selection Section -->
<div class="section" id="device-selection-section">
    <h2>Select ESP32S3 Device</h2>
    <div class="device-selection">
        <p style="text-align: center; margin-bottom: 20px; color: #666;">
            Choose which ESP32S3 device to monitor and manage
        </p>
        
        <div class="device-selection-controls" style="text-align: center; margin-bottom: 20px;">
            <button class="btn btn-primary" onclick="scanForDevices()" id="scan-devices-btn">
                <i data-lucide="search" style="width: 16px; height: 16px; margin-right: 6px;"></i>
                Scan for Devices
            </button>
            <button class="btn btn-secondary" onclick="refreshDeviceSelection()" id="refresh-devices-btn">
                <i data-lucide="refresh-cw" style="width: 16px; height: 16px; margin-right: 6px;"></i>
                Refresh
            </button>
        </div>
        
        <div class="devices-container">
            <div id="devices-list" class="devices-list">
                <div class="devices-empty">
                    <i data-lucide="search" style="width: 48px; height: 48px; margin-bottom: 15px; color: #ccc;"></i>
