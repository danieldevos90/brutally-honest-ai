<!-- Quick Test Section -->
<div class="section">
    <div style="display: flex; align-items: center; justify-content: center; gap: 10px; margin-bottom: 5px;">
        <h2 style="margin-bottom: 0;">Quick Validation Test</h2>
    </div>
    <p style="color: var(--text-muted); margin-bottom: 15px; text-align: center;">Enter text to validate against your knowledge base</p>
    <form onsubmit="validateText(event)">
        <div style="display: grid; gap: 15px;">
            <textarea id="test-text" rows="4" placeholder="Enter text to validate (e.g., 'Praxis has 200 stores across Europe')"></textarea>
            <button type="submit" class="btn" style="width: 100%;">
                <i data-lucide="check-circle" style="width: 16px; height: 16px;"></i>
                Validate Now
            </button>
        </div>
    </form>
</div>

<!-- Validation Results -->
<div class="section" id="validation-results-section" style="display: none;">
    <h2>Validation Results</h2>
    <div id="validation-results">
        <!-- Results will appear here -->
    </div>
</div>

<!-- How It Works -->
<div class="section">
    <h2>How Validation Works</h2>
    <div class="validation-steps">
        <div class="validation-step">
            <div class="validation-step-icon info">
                <i data-lucide="search"></i>
            </div>
            <div class="validation-step-content">
                <h3>1. Claim Extraction</h3>
                <p>AI extracts factual claims from your transcription text</p>
            </div>
        </div>
        
        <div class="validation-step">
            <div class="validation-step-icon warning">
                <i data-lucide="database"></i>
            </div>
            <div class="validation-step-content">
                <h3>2. Knowledge Base Search</h3>
                <p>Each claim is checked against documents and profile facts</p>
            </div>
        </div>
        
        <div class="validation-step">
            <div class="validation-step-icon success">
                <i data-lucide="brain"></i>
            </div>
            <div class="validation-step-content">
                <h3>3. AI Validation</h3>
                <p>LLM analyzes evidence and determines if claims are confirmed, contradicted, or uncertain</p>
            </div>
        </div>
        
        <div class="validation-step">
            <div class="validation-step-icon error">
                <i data-lucide="alert-triangle"></i>
            </div>
            <div class="validation-step-content">
                <h3>4. Results & Warnings</h3>
                <p>Get a detailed report with credibility score and warnings for contradictions</p>
            </div>
        </div>
    </div>
</div>

