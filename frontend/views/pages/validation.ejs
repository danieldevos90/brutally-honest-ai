<script>
    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        loadKnowledgeBaseStats();
    });

    async function validateText(event) {
        event.preventDefault();
        
        const text = document.getElementById('test-text').value.trim();
        if (!text) {
            showNotification('Please enter text to validate', 'error');
            return;
        }
        
        try {
            showNotification('Validating...', 'info');
            
            const transcriptionId = 'test_' + Date.now();
            
            const formData = new URLSearchParams();
            formData.append('transcription', text);
            formData.append('transcription_id', transcriptionId);
            formData.append('extract_claims', 'true');
            
            const response = await fetch(`${API_BASE}/validation/validate-transcription?${formData.toString()}`, {
                method: 'POST'
            });
            
            const result = await response.json();
            
            if (result.success && result.report) {
                displayValidationResults(result.report);
                showNotification('Validation complete!', 'success');
            } else {
                showNotification('Validation failed', 'error');
            }
        } catch (error) {
            console.error('Validation error:', error);
            showNotification('Error during validation', 'error');
        }
    }

    function displayValidationResults(report) {
        const section = document.getElementById('validation-results-section');
        const resultsEl = document.getElementById('validation-results');
        
        const confirmedCount = report.validations.filter(v => v.status === 'confirmed').length;
        const contradictedCount = report.validations.filter(v => v.status === 'contradicted').length;
        const uncertainCount = report.validations.filter(v => v.status === 'uncertain').length;
        const noDataCount = report.validations.filter(v => v.status === 'no_data').length;
        
        const credibilityPercent = Math.round(report.overall_credibility * 100);
        let credibilityColor = 'var(--success)';
        if (credibilityPercent < 50) credibilityColor = 'var(--error)';
        else if (credibilityPercent < 75) credibilityColor = 'var(--warning)';
        
        let html = `
            <div class="credibility-card" style="border-color: ${credibilityColor};">
                <div class="credibility-score" style="color: ${credibilityColor};">${credibilityPercent}%</div>
                <div class="credibility-label">Overall Credibility</div>
                <div class="credibility-summary">${report.summary}</div>
            </div>
            
            <div class="stats-grid">
                <div class="stat-box confirmed">
                    <div class="value">${confirmedCount}</div>
                    <div class="label">Confirmed</div>
                </div>
                <div class="stat-box contradicted">
                    <div class="value">${contradictedCount}</div>
                    <div class="label">Contradicted</div>
                </div>
                <div class="stat-box uncertain">
                    <div class="value">${uncertainCount}</div>
                    <div class="label">Uncertain</div>
                </div>
                <div class="stat-box nodata">
                    <div class="value">${noDataCount}</div>
                    <div class="label">No Data</div>
                </div>
            </div>
            
            ${report.warnings && report.warnings.length > 0 ? `
                <div class="warning-box">
                    <h4>‚ö†Ô∏è Warnings</h4>
                    <ul style="margin: 0; padding-left: 20px;">
                        ${report.warnings.map(warning => `<li>${warning}</li>`).join('')}
                    </ul>
                </div>
            ` : ''}
            
            <div>
                <h3 style="margin-bottom: 16px; color: var(--text-primary);">Extracted Claims</h3>
                ${report.claims.length > 0 ? report.claims.map((claim, index) => {
                    const validation = report.validations[index];
                    return getClaimHTML(claim, validation);
                }).join('') : '<p style="color: var(--text-muted); text-align: center; padding: 20px;">No claims extracted</p>'}
            </div>
        `;
        
        resultsEl.innerHTML = html;
        section.style.display = 'block';
        lucide.createIcons();
    }

    function getClaimHTML(claim, validation) {
        let statusClass, statusIcon, statusText;
        
        switch (validation.status) {
            case 'confirmed':
                statusClass = 'confirmed';
                statusIcon = 'check-circle';
                statusText = 'CONFIRMED';
                break;
            case 'contradicted':
                statusClass = 'contradicted';
                statusIcon = 'x-circle';
                statusText = 'CONTRADICTED';
                break;
            case 'uncertain':
                statusClass = 'uncertain';
                statusIcon = 'help-circle';
                statusText = 'UNCERTAIN';
                break;
            default:
                statusClass = 'nodata';
                statusIcon = 'minus-circle';
                statusText = 'NO DATA';
        }
        
        return `
            <div class="claim-card" style="border-left: 4px solid var(--${statusClass === 'confirmed' ? 'success' : statusClass === 'contradicted' ? 'error' : statusClass === 'uncertain' ? 'warning' : 'text-muted'});">
                <div class="claim-text">"${escapeHtml(claim.text)}"</div>
                <div class="claim-tags">
                    <span class="claim-tag ${statusClass}">
                        <i data-lucide="${statusIcon}"></i>
                        ${statusText}
                    </span>
                    <span class="claim-tag meta">Type: ${claim.type}</span>
                    <span class="claim-tag meta">Confidence: ${Math.round(validation.confidence * 100)}%</span>
                </div>
                
                ${validation.recommendation ? `
                    <div class="claim-analysis">
                        <h5>üí° Analysis</h5>
                        <p>${escapeHtml(validation.recommendation)}</p>
                    </div>
                ` : ''}
                
                ${validation.evidence && validation.evidence.length > 0 ? `
                    <div class="evidence-section">
                        <h5>üìö Evidence (${validation.evidence.length})</h5>
                        ${validation.evidence.slice(0, 2).map(evidence => `
                            <div class="evidence-item">
                                <div class="evidence-meta">${evidence.source_type} ‚Ä¢ ${Math.round(evidence.similarity_score * 100)}% match</div>
                                <div class="evidence-content">"${escapeHtml(evidence.content.substring(0, 150))}${evidence.content.length > 150 ? '...' : ''}"</div>
                            </div>
                        `).join('')}
                        ${validation.evidence.length > 2 ? `<div style="text-align: center; color: var(--text-muted); font-size: 12px;">+${validation.evidence.length - 2} more</div>` : ''}
                    </div>
                ` : ''}
            </div>
        `;
    }

    async function loadKnowledgeBaseStats() {
        try {
            const docResponse = await fetch(`${API_BASE}/documents/stats`);
            const docResult = await docResponse.json();
            if (docResult.success && docResult.stats) {
                document.getElementById('kb-documents').textContent = docResult.stats.total_chunks || 0;
            }
            
            let totalProfiles = 0;
            for (const type of ['clients', 'brands', 'persons']) {
                const profileResponse = await fetch(`${API_BASE}/profiles/${type}`);
                const profileResult = await profileResponse.json();
                if (profileResult.success && profileResult.count) {
                    totalProfiles += profileResult.count;
                }
            }
            document.getElementById('kb-profiles').textContent = totalProfiles;
        } catch (error) {
            console.error('Error loading KB stats:', error);
        }
    }
    
    function showPageInfo() {
        showInfoModal('‚úÖ How Validation Works', `
            <h3>1. Knowledge Base Matching</h3>
            <p>Claims are compared against your uploaded documents using semantic search to find relevant evidence.</p>
            
            <h3>2. Confidence Scoring</h3>
            <ul>
                <li><span style="color: var(--success);">‚úÖ Verified</span> - Evidence strongly supports the claim (>70%)</li>
                <li><span style="color: var(--warning);">‚ö†Ô∏è Partially Verified</span> - Some supporting evidence (40-70%)</li>
                <li><span style="color: var(--error);">‚ùå Not Verified</span> - No supporting evidence found (<40%)</li>
                <li><span style="color: var(--info);">üîÑ Contradiction</span> - Evidence contradicts the claim</li>
            </ul>
            
            <h3>3. Evidence Trail</h3>
            <p>Each validation shows the source documents and specific passages used to evaluate the claim.</p>
            
            <p style="margin-top: 20px; padding: 12px; background: var(--bg-tertiary); border-radius: 8px; font-size: 13px;">
                <strong>Best Practice:</strong> Upload comprehensive, up-to-date documents to ensure accurate validation results.
            </p>
        `);
    }
</script>
