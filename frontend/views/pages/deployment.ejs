            <div class="deploy-actions" style="margin-top: 1.5rem;">
                <button class="deploy-btn deploy-btn-primary" onclick="saveConfig()">
                    <i data-lucide="save"></i>
                    Save & Test Configuration
                </button>
            </div>
        </div>
        
        <!-- Backups & Rollback -->
        <div class="deploy-card">
            <div class="card-header">
                <div class="card-icon">
                    <i data-lucide="history"></i>
                </div>
                <h3>Backups & Rollback</h3>
            </div>
            
            <p style="color: var(--text-secondary, #888); font-size: 0.9rem; margin: 0;">
                Rollback to a previous deployment if something goes wrong.
            </p>
            
            <div class="backup-list" id="backup-list">
                <p style="color: var(--text-secondary, #888); font-size: 0.85rem; text-align: center;">
                    Loading backups...
                </p>
            </div>
            
            <div class="deploy-actions">
                <button class="deploy-btn deploy-btn-secondary" onclick="loadBackups()">
                    <i data-lucide="refresh-cw"></i>
                    Refresh Backups
                </button>
                <button class="deploy-btn deploy-btn-danger" onclick="rollbackLatest()" id="btn-rollback">
                    <i data-lucide="rotate-ccw"></i>
                    Rollback Latest
                </button>
            </div>
        </div>
        
        <!-- Remote Logs -->
        <div class="deploy-card" style="grid-column: span 2;">
            <div class="card-header">
                <div class="card-icon">
                    <i data-lucide="terminal"></i>
                </div>
                <h3>Remote Logs</h3>
            </div>
            
            <div class="deploy-actions" style="margin-top: 0;">
                <button class="deploy-btn deploy-btn-secondary" onclick="loadLogs('api')">
                    <i data-lucide="server"></i>
                    API Logs
                </button>
                <button class="deploy-btn deploy-btn-secondary" onclick="loadLogs('frontend')">
                    <i data-lucide="layout"></i>
                    Frontend Logs
                </button>
            </div>
            
            <div class="logs-section">
                <div class="logs-container" id="logs-container">
                    <pre id="logs-content">Click a button above to load logs...</pre>
                </div>
            </div>
        </div>
        
        <!-- Deployment History -->
        <div class="deploy-card" style="grid-column: span 2;">
            <div class="card-header">
                <div class="card-icon">
                    <i data-lucide="clock"></i>
                </div>
                <h3>Deployment History</h3>
            </div>
            
            <div class="history-list" id="history-list">
                <p style="color: var(--text-secondary, #888); font-size: 0.85rem; text-align: center;">
                    Loading history...
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    // Initialize Lucide icons
    if (typeof lucide !== 'undefined') {
        lucide.createIcons();
    }
    
    let pollingInterval = null;
    let isDeploying = false;
    
    // API helper function
    async function apiCall(endpoint, method = 'GET', body = null) {
        const options = {
            method,
            headers: { 'Content-Type': 'application/json' }
        };
        if (body) {
            options.body = JSON.stringify(body);
        }
        const response = await fetch(`/api${endpoint}`, options);
        return response.json();
    }
    
    // Refresh system info
    async function refreshSystemInfo() {
        try {
            const data = await apiCall('/ota/remote-info');
            
            const statusBadge = document.getElementById('connection-status');
            const statusText = statusBadge.querySelector('.status-text');
            
            if (data.success && data.system_info) {
                const info = data.system_info;
                
                document.getElementById('remote-hostname').textContent = info.hostname || '--';
                document.getElementById('remote-gpu').textContent = info.gpu_info || 'N/A';
                document.getElementById('remote-memory').textContent = 
                    info.memory_total ? `${info.memory_available} / ${info.memory_total}` : '--';
                document.getElementById('remote-disk').textContent = info.disk_usage || '--';
                document.getElementById('remote-api').textContent = info.api_running ? 'âœ“ Running' : 'âœ— Stopped';
                document.getElementById('remote-frontend').textContent = info.frontend_running ? 'âœ“ Running' : 'âœ— Stopped';
                document.getElementById('remote-ollama').textContent = info.ollama_running ? 'âœ“ Running' : 'âœ— Stopped';
                document.getElementById('remote-last-deploy').textContent = info.last_deployment || 'Never';
                
                if (info.hostname === 'OFFLINE') {
                    statusBadge.className = 'status-badge status-offline';
                    statusText.textContent = 'Offline';
                } else {
                    statusBadge.className = 'status-badge status-online';
                    statusText.textContent = 'Connected';
                }
            } else {
                statusBadge.className = 'status-badge status-offline';
                statusText.textContent = 'Offline';
            }
        } catch (error) {
            console.error('Failed to get system info:', error);
            document.getElementById('connection-status').className = 'status-badge status-offline';
            document.querySelector('#connection-status .status-text').textContent = 'Error';
        }
    }
    
    // Test connection
    async function testConnection() {
        try {
            const data = await apiCall('/ota/test-connection', 'POST');
            if (data.connected) {
                showNotification('Connection successful! Connected to ' + data.hostname, 'success');
            } else {
                showNotification('Connection failed. Check SSH configuration.', 'error');
            }
        } catch (error) {
            showNotification('Connection test failed: ' + error.message, 'error');
        }
    }
    
    // Deploy quick
    async function deployQuick() {
        if (isDeploying) return;
        
        try {
            setDeploying(true);
            showNotification('Starting quick deployment...', 'info');
            
            const data = await apiCall('/ota/deploy/quick', 'POST');
            
            if (data.success) {
                startProgressPolling();
            } else {
                setDeploying(false);
                showNotification(data.message || 'Deployment failed', 'error');
            }
        } catch (error) {
            setDeploying(false);
            showNotification('Deployment failed: ' + error.message, 'error');
        }
    }
    
    // Deploy full
    async function deployFull() {
        if (isDeploying) return;
        
        if (!confirm('Full deployment will reinstall all dependencies. This may take several minutes. Continue?')) {
            return;
        }
        
        try {
            setDeploying(true);
            showNotification('Starting full deployment...', 'info');
            
            const data = await apiCall('/ota/deploy/full', 'POST');
            
            if (data.success) {
                startProgressPolling();
            } else {
                setDeploying(false);
                showNotification(data.message || 'Deployment failed', 'error');
            }
        } catch (error) {
            setDeploying(false);
            showNotification('Deployment failed: ' + error.message, 'error');
        }
    }
    
    // Restart services
    async function restartServices() {
        try {
            showNotification('Restarting services...', 'info');
            const data = await apiCall('/ota/restart-services', 'POST');
            
            if (data.success) {
                showNotification('Services restarted successfully', 'success');
            } else {
                showNotification(data.message || 'Restart failed', 'error');
            }
            
            await refreshSystemInfo();
        } catch (error) {
            showNotification('Restart failed: ' + error.message, 'error');
        }
    }
    
    // Set deploying state
    function setDeploying(state) {
        isDeploying = state;
        
        document.getElementById('btn-quick-deploy').disabled = state;
        document.getElementById('btn-full-deploy').disabled = state;
        document.getElementById('btn-restart').disabled = state;
        document.getElementById('btn-rollback').disabled = state;
        
        document.getElementById('progress-section').style.display = state ? 'block' : 'none';
        
        const statusBadge = document.getElementById('connection-status');
        const statusText = statusBadge.querySelector('.status-text');
        const spinner = statusBadge.querySelector('.spinner');
        
        if (state) {
            statusBadge.className = 'status-badge status-deploying';
            statusText.textContent = 'Deploying...';
            spinner.style.display = 'inline-block';
        } else {
            spinner.style.display = 'none';
            refreshSystemInfo();
        }
    }
    
    // Start progress polling
    function startProgressPolling() {
        if (pollingInterval) {
            clearInterval(pollingInterval);
        }
        
        pollingInterval = setInterval(async () => {
            try {
                const data = await apiCall('/ota/status');
                
                document.getElementById('deploy-progress').style.width = data.progress + '%';
                document.getElementById('progress-text').textContent = data.message || 'Processing...';
                
                if (data.status === 'completed' || data.status === 'failed') {
                    clearInterval(pollingInterval);
                    pollingInterval = null;
                    setDeploying(false);
                    
                    if (data.status === 'completed') {
                        showNotification('Deployment completed successfully!', 'success');
                    } else {
                        showNotification('Deployment failed: ' + data.message, 'error');
                    }
                    
                    loadHistory();
                }
            } catch (error) {
                console.error('Progress polling error:', error);
            }
        }, 1000);
    }
    
    // Load backups
    async function loadBackups() {
        try {
            const data = await apiCall('/ota/backups');
            const container = document.getElementById('backup-list');
            
            if (data.success && data.backups && data.backups.length > 0) {
                container.innerHTML = data.backups.map(backup => `
                    <div class="backup-item">
                        <div class="backup-info">
                            <span class="backup-name">${backup.name}</span>
                            <span class="backup-date">${backup.timestamp}</span>
                        </div>
                        <button class="deploy-btn deploy-btn-secondary" onclick="rollbackTo('${backup.name}')" style="padding: 0.5rem 0.75rem;">
                            <i data-lucide="rotate-ccw" style="width: 14px; height: 14px;"></i>
                            Restore
                        </button>
                    </div>
                `).join('');
                lucide.createIcons();
            } else {
                container.innerHTML = '<p style="color: var(--text-secondary, #888); font-size: 0.85rem; text-align: center;">No backups available</p>';
            }
        } catch (error) {
            console.error('Failed to load backups:', error);
        }
    }
    
    // Rollback to specific backup
    async function rollbackTo(backupName) {
        if (!confirm(`Rollback to ${backupName}? This will restore the remote system to that version.`)) {
            return;
        }
        
        try {
            showNotification('Starting rollback...', 'info');
            const data = await apiCall('/ota/rollback', 'POST', { backup_name: backupName });
            
            if (data.success) {
                showNotification('Rollback completed successfully', 'success');
                await refreshSystemInfo();
            } else {
                showNotification(data.message || 'Rollback failed', 'error');
            }
        } catch (error) {
            showNotification('Rollback failed: ' + error.message, 'error');
        }
    }
    
    // Rollback to latest backup
    async function rollbackLatest() {
        if (!confirm('Rollback to the most recent backup?')) {
            return;
        }
        
        try {
            showNotification('Starting rollback...', 'info');
            const data = await apiCall('/ota/rollback', 'POST');
            
            if (data.success) {
                showNotification('Rollback completed successfully', 'success');
                await refreshSystemInfo();
            } else {
                showNotification(data.message || 'Rollback failed', 'error');
            }
        } catch (error) {
            showNotification('Rollback failed: ' + error.message, 'error');
        }
    }
    
    // Load logs
    async function loadLogs(service) {
        try {
            document.getElementById('logs-content').textContent = 'Loading logs...';
            const data = await apiCall(`/ota/logs/${service}?lines=100`);
            
            if (data.success) {
                document.getElementById('logs-content').textContent = data.logs || 'No logs available';
            } else {
                document.getElementById('logs-content').textContent = 'Failed to load logs: ' + (data.error || 'Unknown error');
            }
        } catch (error) {
            document.getElementById('logs-content').textContent = 'Error: ' + error.message;
        }
    }
    
    // Load deployment history
    async function loadHistory() {
        try {
            const data = await apiCall('/ota/history');
            const container = document.getElementById('history-list');
            
            if (data.success && data.history && data.history.length > 0) {
                container.innerHTML = data.history.map(item => `
                    <div class="history-item">
                        <div class="history-icon ${item.success ? 'success' : 'failed'}">
                            <i data-lucide="${item.success ? 'check' : 'x'}" style="width: 18px; height: 18px;"></i>
                        </div>
                        <div class="history-details">
                            <span class="history-type">${item.deployment_type.toUpperCase()} Deploy</span>
                            <span class="history-time">${new Date(item.started_at).toLocaleString()}</span>
                        </div>
                        <span class="history-duration">${item.duration_seconds.toFixed(1)}s</span>
                    </div>
                `).join('');
                lucide.createIcons();
            } else {
                container.innerHTML = '<p style="color: var(--text-secondary, #888); font-size: 0.85rem; text-align: center;">No deployment history</p>';
            }
        } catch (error) {
            console.error('Failed to load history:', error);
        }
    }
    
    // Current access method
    let currentAccessMethod = 'direct';
    
    // Select access method
    function selectAccessMethod(method) {
        currentAccessMethod = method;
        
        // Update tabs
        document.querySelectorAll('.access-tab').forEach(tab => {
            tab.classList.toggle('active', tab.dataset.method === method);
        });
        
        // Update panels
        document.querySelectorAll('.access-panel').forEach(panel => {
            panel.classList.toggle('active', panel.id === `panel-${method}`);
        });
        
        // Re-initialize icons
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    }
    
    // Save configuration
    async function saveConfig() {
        let config = {};
        
        switch (currentAccessMethod) {
            case 'direct':
                config = {
                    remote_host: document.getElementById('remote-host').value,
                    remote_dir: document.getElementById('remote-dir').value,
                    ssh_port: parseInt(document.getElementById('ssh-port').value) || 22,
                    use_tailscale: false,
                    use_cloudflare_tunnel: false
                };
                break;
                
            case 'tailscale':
                const tsUser = document.getElementById('tailscale-user').value || 'brutally';
                const tsHostname = document.getElementById('tailscale-hostname').value;
                config = {
                    remote_host: `${tsUser}@${tsHostname}`,
                    remote_dir: document.getElementById('remote-dir-ts').value,
                    use_tailscale: true,
                    tailscale_hostname: tsHostname,
                    use_cloudflare_tunnel: false
                };
                break;
                
            case 'cloudflare':
                const cfUser = document.getElementById('cloudflare-user').value || 'brutally';
                const cfHostname = document.getElementById('cloudflare-hostname').value;
                config = {
                    remote_host: `${cfUser}@${cfHostname}`,
                    remote_dir: document.getElementById('remote-dir-cf').value,
                    use_tailscale: false,
                    use_cloudflare_tunnel: true,
                    cloudflare_hostname: cfHostname
                };
                break;
                
            case 'jumphost':
                config = {
                    remote_host: document.getElementById('final-host').value,
                    remote_dir: document.getElementById('remote-dir-jh').value,
                    jump_host: document.getElementById('jump-host').value,
                    use_tailscale: false,
                    use_cloudflare_tunnel: false
                };
                break;
        }
        
        try {
            showNotification('Testing connection...', 'info');
            const data = await apiCall('/ota/configure', 'POST', config);
            
            if (data.success) {
                const status = data.connection_test === 'passed' ? 'success' : 'warning';
                const msg = data.connection_test === 'passed' 
                    ? `Connected to ${data.effective_host}` 
                    : 'Configuration saved but connection failed. Check your settings.';
                showNotification(msg, status);
                await refreshSystemInfo();
            } else {
                showNotification('Failed to save configuration', 'error');
            }
        } catch (error) {
            showNotification('Error: ' + error.message, 'error');
        }
    }
    
    // Show notification helper
    function showNotification(message, type = 'info') {
        if (typeof window.showNotification === 'function') {
            window.showNotification(message, type);
        } else {
            console.log(`[${type}] ${message}`);
            alert(message);
        }
    }
    
    // Check admin access
    async function checkAdminAccess() {
        try {
            const response = await fetch('/api/auth/status');
            const data = await response.json();
            
            if (!data.authenticated || !data.user || data.user.role !== 'admin') {
                // Not admin - show access denied, hide main content
                document.getElementById('admin-access-denied').style.display = 'block';
                document.getElementById('deployment-main').style.display = 'none';
                lucide.createIcons();
                return false;
            }
            return true;
        } catch (e) {
            console.error('Auth check failed:', e);
            return false;
        }
    }
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', async () => {
        // First check admin access
        const isAdmin = await checkAdminAccess();
        if (!isAdmin) return;
        
        // Initialize deployment page
        refreshSystemInfo();
        loadBackups();
        loadHistory();
        
        // Auto-refresh system info every 30 seconds
        setInterval(refreshSystemInfo, 30000);
    });
</script>

